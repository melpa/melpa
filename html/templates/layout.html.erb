<%
stable = File.absolute_path(__FILE__).include? "html-stable"

if stable
  title = "MELPA Stable"
  othersite = {
    "url": "https://melpa-test.alanpearce.eu",
    "title": "MELPA",
  }
else
  title = "MELPA"
  othersite = {
    "url": "https://melpa-stable-test.alanpearce.eu",
    "title": "MELPA Stable",
  }
end
%>
<!DOCTYPE html>
<html lang="en-US" class="<%= "stable" if stable %>">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title><%= title %></title>
  <meta name="description" lang="en" content="The largest and most up-to-date repository of Emacs packages.">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="search" type="application/opensearchdescription+xml" href="/opensearch.xml" title="Melpa" >
  <link href="/updates.rss" rel="alternate" title="<%= title %>" updates" type="application/rss+xml">
  <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js" type="text/javascript"></script><![endif]-->
  <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/melpa.css" type="text/css">
</head>
<body>
  <header class="navbar navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand archive-name"><%= title %></a>
      </div>
      <nav class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="/getting-started.html">Getting started</a></li>
          <li><a href="https://github.com/melpa/melpa">GitHub</a></li>
          <li><a href="https://twitter.com/melpa_emacs">Twitter</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="other-melpa-link" href="<%= othersite[:url] %>"><%= othersite[:title] %></a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main class="container" id="content">
    <%= ERB.new(File.new(content_template).read, eoutvar: "_contentout").result(binding) %>
  </main>
  <footer class="container">
    <small>
      <a href="https://github.com/melpa/melpa/blob/master/html/js/melpa.js">Source code for this page &rarr;</a>
      <br/>
      <a href="/jslicense.html" data-jslicense="1">JavaScript license information</a>
    </small>
  </footer>
</body>
<script src="/melpa.js"></script>
</html>
