;; ~54K SLOC (87% Emacs Lisp), plus C and shell helpers.
;; Missing C/shell helpers are handled gracefully at runtime but
;; the software is not intended for real use without them.
(elinit
 :fetcher github
 :repo "emacs-os/el-init"
 :files (:defaults
         ;; M-x elinit-handbook opens README.org as a read-only buffer
         "README.org"
         ;; C helpers (logd, runas, rlimits) compiled on demand via
         ;; M-x elinit-build-libexec-helpers or automatically when
         ;; elinit-libexec-build-on-startup is set to 'automatic
         ("libexec" "libexec/*.c")
         ;; elinitctl is the CLI admin tool; logrotate and log-prune
         ;; are default oneshot log management helpers; elinit-import
         ;; converts systemd units to elinit format
         ("sbin" "sbin/elinitctl"
                 "sbin/elinit-logrotate"
                 "sbin/elinit-log-prune"
                 "sbin/elinit-import")))
